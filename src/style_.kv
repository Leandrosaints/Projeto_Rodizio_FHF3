#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window
<MDBoxLayout>:


    orientation: 'vertical'
    id: root.self.id
    height: self.minimum_height
    padding: 0, 130, 0, 0
    spacing: dp(35)
    canvas.before:
        Color:
            rgba: get_color_from_hex("#4a42ad")  # Cor de fundo do Main principal
        Rectangle:
            source: 'img.jpg' #Caminho da imagem
            size: self.width, dp(320)  # Tamanho da imagem (largura do layout, altura fixa)
            pos: self.x, self.top - dp(320)





<MyMDCard>:
    card_number: root.card_number

    orientation:'vertical'
    #padding:50
    radius:[20, 20, 20, 20]
    size_hint: (None, None)
    #size:(280, 350)
    #pos_hint: {"center_x": 0.5, "center_y": 0.4}
    md_bg_color: get_color_from_hex("#31378c")


    canvas.before:
        Color:
            #sempre o ultimo card
            rgba: get_color_from_hex("#ced9f5") if (self.card_number == 1  ) else (0, 0, 0, 0)


        RoundedRectangle:
            pos: self.pos[0] + 15, self.pos[1] + 50
            size: Window.width - 130, Window.height * 0.4
            radius: [0, 30, 30, 0]
        Color:
            rgba: (0, 0, 0, 0) if self.card_number == 3 else get_color_from_hex("#008BF5") #if (self.card_number == 1 ) else (0, 0, 0, 0)
        RoundedRectangle:
            pos: self.pos[0], self.pos[1] +30  # Ajuste conforme necess√°rio
            size: Window.width - 180, Window.height * 0.5
            radius: [0, 30, 30, 0]

