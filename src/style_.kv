#:import get_color_from_hex kivy.utils.get_color_from_hex

<MDBoxLayout>:

    orientation: 'vertical'
    id: root.self.id
    height: self.minimum_height
    padding: 0, 130, 0, 0
    spacing: dp(32)

    canvas.before:
        Color:
            rgba:  get_color_from_hex("#4a42ad")# cor de fundo do Main principal
        Rectangle:

            size: self.size
            pos: self.pos
            #radius: [0, 0, 0, 0]
            source: 'src/img/pin.jpg'



<MyBoxLayout>:
    orientation: 'vertical'
    padding: dp(24)
    spacing: dp(16)
    canvas.before:
        Color:
            rgba: get_color_from_hex("#f0f0f0")#cor de fundo do widget secundary
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [30, 30, 0, 0]
<Search>

    hint_text: "Pesquisar"
    size_hint:(None, None)
    size: 250, 32
    mode: "round"

    line_color_normal: 1, 1, 1, 1
    line_color_focus: 1, 1, 1, 1
    background_color:10, 10, 20, 0




<MyLabel>:

    padding:10, 0, 0, 0
    size_hint:(None, None)
    canvas.before:
        Color:
            rgba: get_color_from_hex("#4a42ad") #if self.id != 'person_label' else get_color_from_hex("#3140B6") # Cor de fundo desejada
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0, 0, 0, 0]











