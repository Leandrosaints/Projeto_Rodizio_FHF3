#:import get_color_from_hex kivy.utils.get_color_from_hex
<BoxLayout>:
    orientation: 'vertical'

    height: self.minimum_height
    padding: 0, 130, 0, 0
    spacing: dp(32)

    canvas.before:
        Color:
            rgba:  get_color_from_hex("#2775f5")
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0, 0, 0, 0]


<MyBoxLayout>:
    orientation: 'vertical'
    padding: dp(24)
    spacing: dp(16)
    canvas.before:
        Color:
            rgba: 1, 1, 1,  1  # Cor branca em RGBA
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0, 50, 0, 0]
<MyLabel>:

    padding:10, 0, 0, 0
    size_hint:(None, None)
    canvas.before:
        Color:
            rgba: 1, 1, 1,  1 #get_color_from_hex("#f0f0f0") #if self.id != 'person_label' else get_color_from_hex("#3140B6") # Cor de fundo desejada
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0, 0, 0, 0]

