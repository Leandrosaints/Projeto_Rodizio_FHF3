#:import get_color_from_hex kivy.utils.get_color_from_hex

<MDBoxLayout>:

    orientation: 'vertical'
    id: root.self.id
    height: self.minimum_height
    padding: 0, 130, 0, 0
    spacing: dp(20)

    canvas.before:
        Color:
            rgba:  get_color_from_hex("#4a42ad")# cor de fundo do Main principal
        Rectangle:

            size: self.size
            pos: self.pos
            #radius: [20, 0, 20, 0]


            source: 'src/img/brf.png'




<MDCard>:
    card_number: root.card_number

    orientation:'vertical'
    padding:50
    radius:[20, 20, 20, 20]
    size_hint: None, None
    size:(280, 350)
    #pos_hint: {"center_x": 0.5, "center_y": 0.4}
    md_bg_color: get_color_from_hex("#417ef5")


    canvas.before:
        Color:
            #sempre o ultimo card
            rgba: get_color_from_hex("#ced9f5") if (self.card_number == 1  ) else (0, 0, 0, 0)


        RoundedRectangle:
            pos: self.pos[0] + 5, self.pos[1] +50
            size:(300, 230)
            radius: [0, 30, 30, 0]
        Color:
            rgba: (0, 0, 0, 0) if self.card_number == 3 else get_color_from_hex("#b7c8f4") #if (self.card_number == 1 ) else (0, 0, 0, 0)
        RoundedRectangle:
            pos: self.pos[0] + 5, self.pos[1] +30  # Ajuste conforme necess√°rio
            size:(290, 290)
            radius: [0, 30, 30, 0]

<MyBoxLayout>:

    orientation: 'vertical'
    padding: dp(24)
    spacing: dp(16)
    canvas.before:
        Color:
            rgba: get_color_from_hex("#f0f0f0")#cor de fundo do widget secundary
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [30, 30, 0, 0]







<Search>

    hint_text: "Pesquisar"
    size_hint:(None, None)
    size: 250, 32
    mode: "round"

    line_color_normal: 1, 1, 1, 1
    line_color_focus: 1, 1, 1, 1
    background_color:10, 0, 10, 0




<MyLabel>:

    padding:10, 0, 0, 0
    size_hint:(None, None)
    canvas.before:
        Color:
            rgba: get_color_from_hex("#4a42ad") #if self.id != 'person_label' else get_color_from_hex("#3140B6") # Cor de fundo desejada
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0, 0, 0, 0]









